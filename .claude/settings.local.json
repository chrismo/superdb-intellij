{
  "permissions": {
    "allow": [
      "Bash(./gradlew runIde:*)",
      "Bash(./gradlew:*)",
      "Bash(./scripts/analyze-tests.sh:*)",
      "Bash(./scripts/claude-superdb-test.sh:*)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:api.github.com)",
      "Bash(gh api:*)",
      "Bash(git push)",
      "Bash(LSP_REPO=chrismo/superdb-syntaxes bash -x scripts/download-all-platforms.sh latest)",
      "Bash(./scripts/download-all-platforms.sh:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ./scripts/setup-gradle-proxy.sh",
            "timeout": 30,
            "statusMessage": "Setting up Gradle proxy..."
          }
        ]
      }
    ]
  }
}
